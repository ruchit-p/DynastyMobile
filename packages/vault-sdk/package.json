{
  "name": "@dynasty/vault-sdk",
  "version": "0.1.0",
  "description": "Shared vault SDK for Dynasty mobile and web applications",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./types": {
      "import": "./dist/types/index.js",
      "require": "./dist/types/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./api": {
      "import": "./dist/api/index.js",
      "require": "./dist/api/index.js",
      "types": "./dist/api/index.d.ts"
    },
    "./hooks": {
      "import": "./dist/hooks/index.js",
      "require": "./dist/hooks/index.js",
      "types": "./dist/hooks/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rimraf dist",
    "dev": "yarn build:watch"
  },
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "vault",
    "encryption",
    "file-storage",
    "dynasty",
    "react",
    "react-native"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dynastymobile/DynastyMobile.git",
    "directory": "packages/vault-sdk"
  },
  "license": "MIT",
  "dependencies": {
    "@tanstack/react-query": "^5.61.5",
    "axios": "^1.9.0",
    "firebase": "^11.9.1",
    "zod": "^3.25.64"
  },
  "peerDependencies": {
    "@react-native-firebase/app": "^22.1.0",
    "@react-native-firebase/firestore": "^22.1.0",
    "@react-native-firebase/functions": "^22.2.1",
    "@react-native-firebase/storage": "^22.1.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-native": ">=0.70.0"
  },
  "peerDependenciesMeta": {
    "@react-native-firebase/app": {
      "optional": true
    },
    "@react-native-firebase/firestore": {
      "optional": true
    },
    "@react-native-firebase/functions": {
      "optional": true
    },
    "@react-native-firebase/storage": {
      "optional": true
    },
    "react-native": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/dom": "^9.3.3",
    "@testing-library/react": "^16.0.1",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "typescript": "^5.8.3"
  },
  "publishConfig": {
    "access": "restricted"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
