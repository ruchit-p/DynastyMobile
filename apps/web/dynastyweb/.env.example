# Firebase Configuration (from Firebase Console)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key_from_firebase_cloud_messaging

# Environment Configuration
NEXT_PUBLIC_ENVIRONMENT=development  # development | staging | production

# Firebase Emulator Configuration (Development Only)
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=false
NEXT_PUBLIC_FIREBASE_AUTH_HOST=localhost:9099
NEXT_PUBLIC_FIREBASE_FIRESTORE_HOST=localhost:8080
NEXT_PUBLIC_FIREBASE_FUNCTIONS_HOST=localhost:5001
NEXT_PUBLIC_FIREBASE_STORAGE_HOST=localhost:9199

# Redis Configuration (Required for Rate Limiting)
# Vercel KV automatically provides these environment variables
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
# Additional Vercel KV variables (optional)
KV_URL=your_kv_url
REDIS_URL=your_redis_url
KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token

# Legacy Upstash variables (for backward compatibility)
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# Admin API Key (for cache invalidation endpoints)
ADMIN_API_KEY=your_secure_admin_key


# Sentry Error Monitoring (Required for Production)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key