# Firebase Configuration (from Firebase Console)
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id
NEXT_PUBLIC_FIREBASE_VAPID_KEY=your_vapid_key_from_firebase_cloud_messaging

# Environment Configuration
NEXT_PUBLIC_ENVIRONMENT=development  # development | staging | production

# Firebase Emulator Configuration (Development Only)
NEXT_PUBLIC_USE_FIREBASE_EMULATOR=false
NEXT_PUBLIC_FIREBASE_AUTH_HOST=localhost:9099
NEXT_PUBLIC_FIREBASE_FIRESTORE_HOST=localhost:8080
NEXT_PUBLIC_FIREBASE_FUNCTIONS_HOST=localhost:5001
NEXT_PUBLIC_FIREBASE_STORAGE_HOST=localhost:9199

# Redis Configuration (Required for Rate Limiting)
# Vercel KV automatically provides these environment variables
KV_REST_API_URL=your_kv_rest_api_url
KV_REST_API_TOKEN=your_kv_rest_api_token
# Additional Vercel KV variables (optional)
KV_URL=your_kv_url
REDIS_URL=your_redis_url
KV_REST_API_READ_ONLY_TOKEN=your_kv_read_only_token

# Legacy Upstash variables (for backward compatibility)
UPSTASH_REDIS_REST_URL=your_upstash_redis_rest_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_rest_token

# Admin API Key (for cache invalidation endpoints)
ADMIN_API_KEY=your_secure_admin_key

# ========================================
# BACKBLAZE B2 STORAGE CONFIGURATION
# ========================================
# B2 is now the primary storage provider (migrated from R2/Firebase)
NEXT_PUBLIC_STORAGE_PROVIDER=b2
NEXT_PUBLIC_ENABLE_B2_MIGRATION=true

# B2 Configuration (replace with your values)
NEXT_PUBLIC_B2_DOWNLOAD_URL=https://f004.backblazeb2.com/file/your-bucket-name
NEXT_PUBLIC_B2_BASE_BUCKET=your-bucket-name
NEXT_PUBLIC_B2_ENDPOINT=https://s3.us-west-004.backblazeb2.com
NEXT_PUBLIC_B2_REGION=us-west-004

# CDN Configuration (optional)
NEXT_PUBLIC_CDN_BASE_URL=https://cdn.yourdomain.com

# Image Optimization (include B2 domains)
NEXT_PUBLIC_IMAGE_DOMAINS=firebasestorage.googleapis.com,f004.backblazeb2.com,yourdomain.com

# Sentry Error Monitoring (Required for Production)
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
# For production, use: pk_live_your_stripe_live_publishable_key_here

# Server-side Stripe secret key (for webhook verification and API calls)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
# For production, use: sk_live_your_stripe_secret_key_here

# Webhook endpoint secret (for API route webhook verification)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_endpoint_secret_here

# ========================================
# ADMIN CONFIGURATION
# ========================================
# Admin subdomain configuration
NEXT_PUBLIC_ADMIN_SUBDOMAIN=admin  # The subdomain prefix for admin access

# IP Allowlist for admin access (comma-separated, optional)
# Example: 192.168.1.1,10.0.0.0/24,2001:db8::/32
ADMIN_ALLOWED_IPS=

# Admin setup key for initial admin creation (generate a secure random string)
ADMIN_SETUP_KEY=your_secure_setup_key_here

# Admin session configuration
ADMIN_SESSION_DURATION=3600  # Session duration in seconds (1 hour)
ADMIN_REQUIRE_2FA=true  # Require 2FA for admin access

# Admin notification email (for alerts and monitoring)
ADMIN_NOTIFICATION_EMAIL=admin@yourdomain.com