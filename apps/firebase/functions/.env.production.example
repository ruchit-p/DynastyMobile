# Production environment variables for R2
# Copy this to .env.production and fill in your values

# R2 Configuration
R2_ACCOUNT_ID=your_production_account_id
R2_ACCESS_KEY_ID=your_production_access_key
R2_SECRET_ACCESS_KEY=your_production_secret_key
R2_BASE_BUCKET=dynasty
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Storage Configuration
STORAGE_PROVIDER=r2  # Set to 'firebase' to use Firebase Storage
ENABLE_R2_MIGRATION=true
ENABLE_R2_TESTS=false  # Always false in production

# Feature Flags
ENABLE_STORAGE_MIGRATION=true  # For gradual rollout
R2_MIGRATION_PERCENTAGE=10  # Start with 10% of users

# CDN Configuration (optional but recommended)
CDN_BASE_URL=https://cdn.mydynastyapp.com
ENABLE_CDN=true

# FingerprintJS Pro Configuration
FINGERPRINT_SERVER_API_KEY=your_fingerprint_server_api_key
FINGERPRINT_PUBLIC_API_KEY=your_fingerprint_public_api_key
FINGERPRINT_REGION=global  # or 'eu' for European region

# Security Configuration
CSRF_SECRET_KEY=your_64_char_hex_string_here  # Generate with: openssl rand -hex 32
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Dynasty App

# CORS Configuration
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com  # Comma-separated list