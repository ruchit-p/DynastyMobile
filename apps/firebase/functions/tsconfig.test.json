{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowUnusedLabels": true
  },
  "include": [
    "src",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/__tests__/**/*",
    "src/**/test/**/*",
    "src/test/**/*",
    "test/**/*",
    "jest.setup.js"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "coverage"
  ]
}