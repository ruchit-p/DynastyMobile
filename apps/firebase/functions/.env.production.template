# Dynasty Production Environment Variables Template
# Copy this to .env.production and fill in your production values
# ‚ö†Ô∏è  IMPORTANT: Keep these secrets secure and never commit to git!

# AWS SES Configuration (Production Environment)
EMAIL_PROVIDER=ses
SES_FROM_EMAIL=noreply@mydynastyapp.com
SES_FROM_NAME=Dynasty App
AWS_REGION=us-east-2
# Note: In production, SES uses IAM roles for security. Do not include AWS credentials in production.

# Frontend URL (replace with your production domain)
FRONTEND_URL=https://mydynastyapp.com


# Google Places API Key (replace with your production key)
GOOGLE_PLACES_API_KEY=<YOUR_PRODUCTION_GOOGLE_PLACES_API_KEY>

# Stripe Configuration (replace with your production keys)
STRIPE_SECRET_KEY=<YOUR_PRODUCTION_STRIPE_SECRET_KEY>
STRIPE_WEBHOOK_SECRET=<YOUR_PRODUCTION_STRIPE_WEBHOOK_SECRET>
STRIPE_PUBLISHABLE_KEY=<YOUR_PRODUCTION_STRIPE_PUBLISHABLE_KEY>
# Optional: Pin specific API version (e.g., 2023-10-16)
STRIPE_API_VERSION=

# Cloudflare R2 Configuration (JSON format - replace with your production values)
R2_CONFIG={"accountId":"<YOUR_PRODUCTION_R2_ACCOUNT_ID>","accessKeyId":"<YOUR_PRODUCTION_R2_ACCESS_KEY_ID>","secretAccessKey":"<YOUR_PRODUCTION_R2_SECRET_ACCESS_KEY>"}

# R2 Storage Configuration
R2_BASE_BUCKET=dynastyprod
ENABLE_R2_TESTS=false
ENABLE_R2_MIGRATION=true

# Backblaze B2 Configuration (Primary Storage Provider - replace with your production values)
B2_CONFIG={"keyId":"<YOUR_PRODUCTION_B2_KEY_ID>","applicationKey":"<YOUR_PRODUCTION_B2_APPLICATION_KEY>","bucketName":"dynastyprod","bucketId":"<YOUR_PRODUCTION_B2_BUCKET_ID>"}
B2_BASE_BUCKET=dynastyprod
B2_ENDPOINT=https://s3.us-west-004.backblazeb2.com
B2_REGION=us-west-004
B2_DOWNLOAD_URL=https://f004.backblazeb2.com/file
ENABLE_B2_TESTS=false
ENABLE_B2_MIGRATION=true
B2_MIGRATION_PERCENTAGE=100
STORAGE_PROVIDER=b2

