{
  "name": "dynasty-monorepo",
  "private": true,
  "workspaces": [
    "apps/web",
    "apps/mobile",
    "packages/*"
  ],
  "scripts": {
    "build": "cd apps/web/dynastyweb && npm install && npm run build",
    "web": "yarn workspace dynastyweb dev",
    "mobile": "yarn workspace mobile start",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write .",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "feature": "./scripts/claude-feature-workflow.sh",
    "feature:ts": "ts-node scripts/claude-dev-assistant.ts",
    "feature:quick": "./scripts/claude-feature-workflow.sh --skip-local-tests",
    "feature:force": "./scripts/claude-feature-workflow.sh --force",
    "fix:ci": "./scripts/claude-fix-ci-errors.sh",
    "fix:ci:ts": "ts-node scripts/claude-ci-fixer.ts",
    "fix:pr": "./scripts/claude-fix-ci-errors.sh --pr",
    "test:all": "cd apps/web/dynastyweb && yarn test && cd ../../.. && cd apps/mobile && yarn test && cd ../.. && cd apps/firebase/functions && npm test && cd ../../..",
    "lint:all": "cd apps/web/dynastyweb && yarn lint && cd ../../.. && cd apps/mobile && yarn lint && cd ../.. && cd apps/firebase/functions && npm run lint && cd ../../..",
    "lint:fix": "cd apps/web/dynastyweb && yarn lint --fix && cd ../../.. && cd apps/mobile && yarn lint --fix && cd ../.. && cd apps/firebase/functions && npm run lint -- --fix && cd ../../.."
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-preset-expo": "^13.1.11",
    "eslint": "^9.25.0",
    "prettier": "^2.0.0"
  },
  "resolutions": {
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "string-width": "^4.2.3",
    "cliui": "^7.0.4"
  },
  "dependencies": {
    "@craftzdog/react-native-buffer": "^6.0.5",
    "@react-native-community/datetimepicker": "^8.3.0",
    "@react-native-picker/picker": "^2.11.0",
    "@signalapp/libsignal-client": "^0.72.1",
    "expo": "~53.0.8",
    "expo-document-picker": "^13.1.5",
    "expo-file-system": "^18.1.10",
    "expo-location": "~18.1.4",
    "expo-sharing": "~13.1.5",
    "react": "19.0.0",
    "react-native": "0.79.2",
    "react-native-get-random-values": "^1.11.0",
    "react-native-google-places-autocomplete": "^2.5.7",
    "react-native-keychain": "^10.0.0",
    "react-native-relatives-tree": "^0.1.1",
    "react-native-svg": "^15.11.2"
  },
  "version": "1.0.0"
}