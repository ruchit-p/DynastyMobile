{
  "name": "dynasty-monorepo",
  "private": true,
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/web/dynastyweb",
    "apps/mobile",
    "apps/firebase/functions",
    "packages/vault-sdk"
  ],
  "scripts": {
    "build": "turbo run build --filter=dynastyweb",
    "build:all": "turbo run build",
    "build:functions": "turbo run build --filter=functions",
    "build:web": "turbo run build --filter=dynastyweb",
    "build:analyze": "turbo run build:analyze --filter=dynastyweb",
    "dev": "turbo run dev --parallel",
    "web": "yarn workspace dynastyweb dev",
    "mobile": "yarn workspace mobile start",
    "lint": "turbo run lint",
    "lint:ci": "turbo run lint:ci",
    "test": "turbo run test",
    "test:all": "turbo run test",
    "format": "prettier --write .",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "feature": "./scripts/claude-feature-workflow.sh",
    "feature:ts": "ts-node scripts/claude-dev-assistant.ts",
    "feature:quick": "./scripts/claude-feature-workflow.sh --skip-local-tests",
    "feature:force": "./scripts/claude-feature-workflow.sh --force",
    "fix:ci": "./scripts/claude-fix-ci-errors.sh",
    "fix:ci:ts": "ts-node scripts/claude-ci-fixer.ts",
    "fix:pr": "./scripts/claude-fix-ci-errors.sh --pr",
    "commit:quick": "./scripts/quick-commit.sh",
    "test:web": "cd apps/web/dynastyweb && yarn test",
    "test:firebase": "cd apps/firebase/functions && yarn test",
    "test:integration": "cd apps/web/dynastyweb && yarn test:integration",
    "lint:all": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "pre-push": "yarn test:all"
  },
  "devDependencies": {
    "@babel/core": "^7.27.0",
    "@babel/runtime": "^7.27.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-preset-expo": "^13.2.0",
    "eslint": "^9.25.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "firebase-tools": "^13.13.2",
    "jest": "^29.7.0",
    "jest-expo": "^51.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "turbo": "^2.0.6"
  },
  "resolutions": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "string-width": "4.2.3",
    "cliui": "^7.0.4"
  },
  "dependencies": {
    "@craftzdog/react-native-buffer": "^6.0.5",
    "@react-native-community/datetimepicker": "^8.4.1",
    "@react-native-picker/picker": "^2.11.0",
    "@signalapp/libsignal-client": "^0.74.1",
    "expo": "~53.0.8",
    "expo-document-picker": "^13.1.5",
    "expo-file-system": "^18.1.10",
    "expo-location": "~18.1.4",
    "expo-sharing": "~13.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-native": "0.79.2",
    "react-native-get-random-values": "^1.11.0",
    "react-native-google-places-autocomplete": "^2.5.7",
    "react-native-keychain": "^10.0.0",
    "react-native-relatives-tree": "^0.1.1",
    "react-native-svg": "^15.11.2",
    "typescript": "^5.5.3"
  },
  "version": "1.0.0",
  "engines": {
    "node": "20.x"
  }
}
