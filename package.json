{
  "name": "dynasty-monorepo",
  "private": true,
  "packageManager": "yarn@4.9.2",
  "workspaces": [
    "apps/web/dynastyweb",
    "apps/mobile",
    "apps/firebase/functions",
    "packages/vault-sdk"
  ],
  "scripts": {
    "build": "turbo run build --filter=dynastyweb",
    "build:vercel": "yarn workspace @dynasty/vault-sdk build && yarn workspace dynastyweb build",
    "build:all": "turbo run build",
    "build:functions": "turbo run build --filter=functions",
    "build:web": "turbo run build --filter=dynastyweb",
    "build:analyze": "turbo run build:analyze --filter=dynastyweb",
    "dev": "turbo run dev --parallel",
    "web": "yarn workspace dynastyweb dev",
    "mobile": "yarn workspace mobile start",
    "lint": "turbo run lint",
    "lint:ci": "turbo run lint:ci",
    "test": "turbo run test",
    "test:all": "turbo run test",
    "format": "prettier --write .",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "feature": "./scripts/claude-feature-workflow.sh",
    "feature:ts": "ts-node scripts/claude-dev-assistant.ts",
    "feature:quick": "./scripts/claude-feature-workflow.sh --skip-local-tests",
    "feature:force": "./scripts/claude-feature-workflow.sh --force",
    "fix:ci": "./scripts/claude-fix-ci-errors.sh",
    "fix:ci:ts": "ts-node scripts/claude-ci-fixer.ts",
    "fix:pr": "./scripts/claude-fix-ci-errors.sh --pr",
    "commit:quick": "./scripts/quick-commit.sh",
    "test:web": "cd apps/web/dynastyweb && yarn test",
    "test:firebase": "cd apps/firebase/functions && yarn test",
    "test:integration": "cd apps/web/dynastyweb && yarn test:integration",
    "lint:all": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "pre-push": "yarn test:all"
  },
  "devDependencies": {
    "@babel/core": "^7.27.0",
    "@babel/runtime": "^7.27.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "@types/react": "19",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^8",
    "@typescript-eslint/parser": "^8",
    "babel-plugin-module-resolver": "^5.0.2",
    "babel-preset-expo": "^13.2.3",
    "eslint": "9",
    "eslint-plugin-promise": "^7.2.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^5.2.0",
    "firebase-tools": "^13.13.2",
    "jest": "^30.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.2",
    "ts-jest": "^29.1.5",
    "turbo": "^2.0.6",
    "typescript": "^5.8.3"
  },
  "resolutions": {
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "typescript": "^5.8.3",
    "eslint": "^9.0.0",
    "jest": "^30.0.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.3.0",
    "string-width": "^5.1.2",
    "cliui": "^7.0.4"
  },
  "version": "1.0.0",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {
    "react": "19",
    "react-dom": "19"
  }
}
